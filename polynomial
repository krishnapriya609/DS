#include <stdio.h>
#define MAX 100   

int main() {
    int deg1, deg2;                  
    int poly1[MAX], poly2[MAX];      
    int result[MAX];                 
    int maxDeg, i;

   
    printf("Enter degree of first polynomial: ");
    scanf("%d", &deg1);

    printf("Enter coefficients from constant term to x^%d:\n", deg1);
    for(i = 0; i <= deg1; i++) {
        printf("Coefficient of x^%d: ", i);
        scanf("%d", &poly1[i]);
    }


    printf("\nEnter degree of second polynomial: ");
    scanf("%d", &deg2);

    printf("Enter coefficients from constant term to x^%d:\n", deg2);
    for(i = 0; i <= deg2; i++) {
        printf("Coefficient of x^%d: ", i);
        scanf("%d", &poly2[i]);
    }

   
    maxDeg = (deg1 > deg2) ? deg1 : deg2;

    
    for(i = 0; i <= maxDeg; i++) {
        int coeff1 = (i <= deg1) ? poly1[i] : 0;   // take coefficient if exists
        int coeff2 = (i <= deg2) ? poly2[i] : 0;
        result[i] = coeff1 + coeff2;               // sum them
    }

    
    printf("\nSum of the two polynomials is:\n");

    
    for(i = maxDeg; i >= 0; i--) {
        if(result[i] == 0) continue;  // skip zero terms

       
        if(i != maxDeg && result[i] > 0)
            printf(" + ");

        
        if(i == 0) {                       
            printf("%d", result[i]);
        }
        else if(i == 1) {                   
            printf("%dx", result[i]);
        }
        else {                              
            printf("%dx^%d", result[i], i);
        }
    }

    printf("\n");   
    return 0;
}

